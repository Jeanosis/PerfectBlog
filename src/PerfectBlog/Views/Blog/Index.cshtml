@model PerfectBlog.Models.Blog

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/content/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/content/materialize/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body class="blue-grey lighten-5">
    <!-- jQuery is required by Materialize to function -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/materialize/materialize.min.js"></script>
    <script type="text/javascript">        //custom JS code   </script>

    <div class="z-depth-1 blue lighten-1">
        <div style="height: 260px"></div>
        <div class="right-block-large">
            <div><div class="add-floating-button"><a class="floating-bottom btn-floating btn-large waves-effect waves-light pink darken-3"><i class="material-icons">add</i></a></div></div>
        </div>
    </div>
    <div class="main-block-large">
        @foreach (var record in ViewBag.Blog.Records)
        {
            <div class="z-depth-1 white info-block-large" style="padding: 10px 10px 0px 10px">
                <div class="valign-wrapper">
                    <div style="width: 50px">
                        <img src="http://materializecss.com/images/yuna.jpg" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                    </div>
                    <div class="black-text valign" style="margin-left:10px">
                        <a href="#!"><b>@record.Name</b></a> <br>
                        @if (record.CreationTime.Date == DateTime.Now.Date)
                        {
                            var result = DateTime.Now.Subtract(record.CreationTime);
                            if (result.Hours != 0)
                            {
                                <span>@result.Hours hours ago</span>
                            }
                            else if (result.Minutes != 0)
                            {
                                <span>@result.Minutes minutes ago</span>
                            }
                            else
                            {
                                <span>A moment ago</span>
                            }
                        }
                        else
                        {
                            @record.CreationTime.Date
                        }
                    </div>
                </div>
                <div>
                    @record.Value
                </div>
                <div class="row valign-wrapper" style="border-top: 1px solid black; margin-top: 10px">
                    <div class="col s6 valign left-align">
                        <a href="#!">@record.Comments.Count Comments</a>
                    </div>
                    <div class="col s6 valign right-align">
                        <a href="#!"><i class="material-icons prefix">thumb_up</i>@record.Ratings.Count</a>
                        <a href="#!"><i class="material-icons prefix">thumb_down</i>@record.Ratings.Count</a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
